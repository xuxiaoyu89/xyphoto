{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "rootDir": "./app",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "types" : [
      "lodash",
      "jasmine",
      "node",
      "zone.js"
    ]
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}